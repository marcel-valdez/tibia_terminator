            "north": {
                "x": 1768,
                "y": 281
            },
            "south": {
                "x": 1768,
                "y": 294
            },
            "left": {
                "x": 1758,
                "y": 283
            },
            "right": {
                "x": 1779,
                "y": 283
            }
        },
