// To get the min average heal of your character use:
// http://www.tibia-stats.com/index.php?akcja=spellDmgCalc
{
    "toggle_emergency_ring": "F1",
    "toggle_emergency_amulet": "F2",
    "equip_ring": "F3",
    "equip_amulet": "F4",
    "toggle_tank_ring": "F5",
    "toggle_tank_amulet": "F6",
    "minor_heal": "F7",
    "medium_heal": "F8",
    "greater_heal": "F9",
    "magic_shield": "F10",
    "cancel_magic_shield": "F11",
    "haste": "F12",
    "potion_minor_heal": "XF86Tools",
    "potion_medium_heal": "XF86Launch5",
    "potion_greater_heal": "XF86Launch6",
    "eat_food": "Menu",
    "mana_potion": "Scroll_Lock",

    // These are keys the App will listen to, rather than send.
    // Loots all 9 SQMs when this key is pressed
    "loot": "\\",
    // The actual Tibia loot button and modifier to loot, these
    // are the keys and button you would press to loot manually.
    // Note: It seems shift+click looting is the fastest way to loot.
    // TODO: Make the interval between loot clicks a configurable value.
    "loot_modifier": "shift",
    "loot_button": "right",
    // Cancels an on-going emergency state, so the App will cancel
    // utamo and put on ordinary ring & amulet.
    "start_emergency": "home",
    "cancel_emergency": "end",
    "start_tank_mode": "5",
    "cancel_tank_mode": "end",
    // We need these in order to hook single item hotkeys with
    // directional keys as separate hotkeys
    "up": "w",
    "left": "a",
    "down": "s",
    "right": "d",
    "upper_left": "q",
    "upper_right": "r",
    "lower_left": "z",
    "lower_right": "c"
}
